        "scandio/lmvc":"dev-lmvc-composer",
        "leafo/lessphp": "v0.3.9",
        "mustache/mustache": "v2.1.0"
    },
    "repositories":[
        {
            "type":"git",
            "url":"https://github.com/scandio/lmvc"
        }
    ],
    "autoload": {
        "psr-0": {
            "Scandio\\lmvc\\modules": "lib/"
