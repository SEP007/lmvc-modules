<phpunit bootstrap="bootstrap.php" verbose="true" convertWarningsToExceptions="false">
   <testsuites>
      <testsuite name="AssetPipeline">
         <directory suffix=".php">assetpipeline</directory>
      </testsuite>
   </testsuites>

   <logging>
      <log type="coverage-html" target="result/report" charset="UTF-8" highlight="false" lowUpperBound="35" highLowerBound="70" />
      <log type="coverage-clover" target="result/clover.xml" />
      <log type="coverage-php" target="result/coverage.cov"/>
   </logging>
</phpunit>